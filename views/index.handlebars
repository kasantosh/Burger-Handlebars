<div class="container-fluid">
    <div class="row">
        <div class="col-12 d-flex p-0 flex-column align-items-center">
            <img src="../public/assets/img/burger.png" alt="">
            <h1>Eat-da-Burger</h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-6">
            {{#each burgers}}
            {{#unless devoured}}
            <div class="px-3 mt-2 ordered d-flex justify-content-end">

                <h6 class="p-2 w-50">{{burger_name}}</h6>
                <button class="devour btn h-75 py-1 btn-warning mx-1 devour-btn" devour_id={{id}}>Devour me!</button>


            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-6">
            {{#each burgers}}
            {{#if devoured}}
            <div class="px-5 mt-3 devoured">
                <h6 class="p-2 w-50">{{burger_name}}</h6>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <br>
    <div class="row d-flex flex-column align-items-center">
        <div class=" form-control w-25 d-flex flex-column align-items-center">
            <input type="text" class="w-100 mb-2" id="burger-text">
            <button class="btn btn-warning" id="burger-submit">Enter your favourite Burger</button>
        </div>
    </div>
</div>